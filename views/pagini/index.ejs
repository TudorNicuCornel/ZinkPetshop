                                <mtr>
                                    <mtd><mi>In</mi><mo>=</mo><mi>Întreținerea</mi></mtd>
                                </mtr>

                                <mtr>
                                    <mtd><mi>Sb</mi><mo>=</mo><mi>Salariul de bază</mi></mtd>
                                </mtr>

